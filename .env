# ===============================================
# Configuration Airflow Data Warehouse
# ===============================================

# Configuration de base
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.

# Utilisateur admin Airflow
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin123

# Dépendances pip supplémentaires (optionnel)
_PIP_ADDITIONAL_REQUIREMENTS=

# ===============================================
# Configuration des bases de données
# ===============================================

# PostgreSQL principal
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Data Warehouse (exemple avec PostgreSQL)
DWH_HOST=localhost
DWH_PORT=5432
DWH_USER=dwh_user
DWH_PASSWORD=dwh_password
DWH_DATABASE=data_warehouse

# ===============================================
# Configuration dbt
# ===============================================

DBT_PROFILES_DIR=/opt/airflow/.dbt
DBT_PROJECT_DIR=/opt/airflow/dbt_projects

# Variables dbt pour les connexions
DBT_DWH_HOST=${DWH_HOST}
DBT_DWH_PORT=${DWH_PORT}
DBT_DWH_USER=${DWH_USER}
DBT_DWH_PASSWORD=${DWH_PASSWORD}
DBT_DWH_DATABASE=${DWH_DATABASE}

# ===============================================
# Configuration Cloud (optionnel)
# ===============================================

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=

# Google Cloud
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# Azure
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_CONTAINER_NAME=

# ===============================================
# Configuration Selenium/Chrome
# ===============================================

CHROME_BIN=/usr/bin/google-chrome
CHROMEDRIVER_PATH=/usr/local/bin/chromedriver
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10

# ===============================================
# Configuration API externes
# ===============================================

# Slack notifications
SLACK_TOKEN=
SLACK_CHANNEL=#airflow-alerts

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=airflow@company.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_PHONE=

# ===============================================
# Configuration monitoring
# ===============================================

# Sentry pour error tracking
SENTRY_DSN=

# Prometheus metrics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ===============================================
# Configuration sécurité
# ===============================================

# Clé de chiffrement Airflow (générer avec: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
AIRFLOW_FERNET_KEY=ZmDfcTF7_60GrrY167zsiPd67pEvs0aGOv2oasOM1Pg=

# Secret pour JWT
JWT_SECRET_KEY=your-super-secret-jwt-key

# ===============================================
# Configuration développement
# ===============================================

# Mode debug
DEBUG=false
LOG_LEVEL=INFO

# Profiling
PROFILING_ENABLED=false

# Tests
PYTEST_ARGS=--verbose --tb=short

# Forcer l'utilisation du virtualenv
PATH="/home/airflow/venv/bin:$PATH"
